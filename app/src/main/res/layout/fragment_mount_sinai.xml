<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BODY"
    tools:context=".MountSinai">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mount_sinai"
                android:textColor="@color/heading"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="28sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:src="@drawable/star"/>

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6/5"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="19sp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Place Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/mountsinai"
            android:scaleType="centerCrop" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape"
            android:text="@string/mount_sinai_also_known_as_jebel_musa_is_a_sacred_mountain_in_egypt_s_sinai_peninsula_believed_to_be_where_prophet_moses_received_the_ten_commandments_it_stands_at_2_285_meters_7_497_feet_and_is_a_major_pilgrimage_site_for_christians_muslims_and_jews_the_mountain_offers_a_breathtaking_sunrise_view_and_many_visitors_climb_it_at_night_to_witness_the_dawn_from_its_peak_at_its_base_lies_st_catherine_s_monastery_one_of_the_world_s_oldest_christian_monasteries"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="italic"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/location_map"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/places"
                android:scaleType="centerCrop" />
            <!-- Google Maps Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/open_map_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/view_on_google_maps"
                android:layout_gravity="center"
                android:backgroundTint="@color/bg"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:padding="12dp"/>
        </LinearLayout>
        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:text="@string/add_to_favorite"
            android:backgroundTint="@color/bg"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"

            />

    </LinearLayout>
</FrameLayout>